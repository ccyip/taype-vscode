{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Taype",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other.taype",
					"match": "(?<![\\w`~$])(data|fn|obliv)(?![\\w#])"
				},
				{
					"name": "keyword.control.taype",
					"match": "(?<![\\w`~$])(let|in|if|then|else|mux|case|of|end|tape)(?![\\w#])"
				},
				{
					"name": "keyword.control.obliv.taype",
					"match": "`(if|case)(?![\\w#])"
				},
				{
					"name": "support.type.taype",
					"match": "(?<![\\w`~$#])(unit|bool|int|@)(?![\\w#])"
				},
				{
					"name": "support.type.obliv.taype",
					"match": "(?<![\\w`~$])`(bool|int)(?![\\w#])"
				},
				{
					"name": "keyword.operator.taype",
					"match": "(\\\\|->|:|=|\\||,|<=|==|\\+|-|\\*|/|&&|\\|\\|)"
				},
				{
					"name": "keyword.operator.obliv.taype",
					"match": "`(<=|==|\\+|-|\\*|/|&&|\\|\\|)"
				},
				{
					"name": "support.function.taype",
					"match": "(?<![\\w`~$])(not|s_bool|r_bool|s_int|r_int|@new|@concat|@slice)(?![\\w#])"
				},
				{
					"name": "support.function.obliv.taype",
					"match": "(?<![\\w`~$])`not(?![\\w#])"
				},
				{
					"name": "constant.numeric.taype",
					"match": "(?<![\\w`~$])[\\d]+(?![\\w#])"
				},
				{
					"name": "constant.language.taype",
					"match": "(?<![\\w`~$])(True|False)(?![\\w#])"
				},
				{
					"name": "entity.name.tag.taype",
					"match": "(?<![\\w`$])~?[[:upper:]][[:alnum:]_']+(?![\\w#])"
				},
				{
					"name": "entity.name.tag.obliv.taype",
					"match": "(?<![\\w`~$])`(inl|inr)(?![\\w#])"
				}
			]
		},
		"line_comment": {
			"name": "comment.line.double-dash.taype",
			"begin": "--",
			"end": "$"
		},
		"block_comment": {
			"name": "comment.block.taype",
			"begin": "\\{-",
			"end": "-\\}",
			"patterns": [
				{
					"include": "#block_comment"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"include": "#line_comment"
				},
				{
					"include": "#block_comment"
				}
			]
		}
	},
	"scopeName": "source.taype"
}