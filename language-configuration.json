{
    "comments": {
        "lineComment": "//"
    },
    "brackets": [
        ["(", ")"],
        ["~(", ")"],
        ["#(", ")"]
    ],
    "autoClosingPairs": [
        ["(", ")"],
        ["~(", ")"],
        ["#(", ")"]
    ],
    "surroundingPairs": [
        ["(", ")"],
        ["~(", ")"],
        ["#(", ")"]
    ],
    "indentationRules": {
        "decreaseIndentPattern": "^\\s*(end|with|in|else)\\b",
        "increaseIndentPattern": "\\b(let|fn|fn'|obliv|data) ~?[[:alnum:]_'#]+( [^ ]+)* =\\s*$|(->|=>)[ \\t]*$|\\bif\\s+.*\\sthen$|\\belse",
        "indentNextLinePattern": "(?!\\bif.*then.*else.*)\\bif|\\bthen[ \\t]*$|\\belse[ \\t]*$$"
    },
    "wordPattern": "(~|%)?[[:alpha:]_][[:alnum:]_'#]+"
}